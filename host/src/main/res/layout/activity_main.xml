<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostActivity">

    <Button
        android:id="@+id/tv_start_plugin_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PluginActivity"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_loadplugin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_loadplugin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载插件"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/tv_start_plugin_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>